<div class="bg-container">
  <nav class="home-nav">
    <div class="d-flex align-items-center">
      <img src='<%= Routes.static_path(@conn, "/icons/report.png") %>' alt="project-algo-logo" width="30px">
      <h4 class="my-0 ml-3">projectalgo</h4>
    </div>
    <%= if @current_user do %>
      <%= link "Log Out", to: Routes.session_path(@conn, :delete), method: :delete, class: "link-btn" %>
    <% else %>
      <%= link "Log In", to: Routes.session_path(@conn, :new), class: "link-btn" %>
    <% end %>
  </nav>
  <div class="hero-container">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3">
          <div class="card border-0 rounded shadow">
            <div class="card-body">
              <%= render "form.html", Map.put(assigns, :action, Routes.user_path(@conn, :create, @invitation.invite_code)) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>